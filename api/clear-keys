export default function handler(req, res) {
  try {
    res.setHeader('Access-Control-Allow-Origin', '*');
    res.setHeader('Access-Control-Allow-Methods', 'POST, OPTIONS');
    res.setHeader('Access-Control-Allow-Headers', 'Content-Type');
    res.setHeader('Content-Type', 'application/json');

    if (req.method === 'OPTIONS') {
      return res.status(200).end();
    }

    if (req.method !== 'POST') {
      return res.status(200).json({ 
        success: false,
        error: 'Method not allowed' 
      });
    }

    const { password } = req.body || {};

    if (!password || password !== 'Whoamidev1819') {
      return res.status(200).json({ 
        success: false,
        error: 'Invalid password' 
      });
    }

    // Clear all keys except test keys
    if (global.keyDatabase) {
      const testKeys = {
        'WARPAH_TEST001': global.keyDatabase.keys['WARPAH_TEST001'],
        'WARPAH_TEST002': global.keyDatabase.keys['WARPAH_TEST002']
      };
      
      global.keyDatabase.keys = testKeys;
      global.keyDatabase.usage_logs = [];
    }

    return res.status(200).json({
      success: true,
      message: 'All keys cleared successfully (test keys preserved)'
    });

  } catch (error) {
    console.error('Clear Keys Error:', error);
    return res.status(200).json({
      success: false,
      error: 'Server error: ' + error.message
    });
  }
}
